<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- Disable cloud backup for security - password manager data should never be backed up -->
    <cloud-backup>
        <exclude domain="root" />
        <exclude domain="sharedpref" />
        <exclude domain="database" />
        <exclude domain="file" />
    </cloud-backup>

    <!-- Disable device-to-device transfer for security -->
    <device-transfer>
        <exclude domain="root" />
        <exclude domain="sharedpref" />
        <exclude domain="database" />
        <exclude domain="file" />
    </device-transfer>
</data-extraction-rules>
